extends _layout

block vars
	- var pageTitle = "Contact";
	- var pageClass = "contactpage loadpage";
	- var pageActive = "contacpage";

block content
	//.webp-img(data-webp="./img/Rectangle5.webp" data-img="./img/Rectangle5.jpg")

		<picture>
			<source srcset="./img/awesomeWebPImage.webp" type="image/webp">
			<source srcset="./img/creakyOldJPEG.jpg" type="image/jpeg">
			<img src="./img/creakyOldJPEG.jpg" alt="Alt Text!">
		</picture>

	div.main-wrap
		.contact-page
			.block-wrap
				.site-title.contact-page__title Контакты

				.contact-info
					.contact-info__inner
						.contact-info__content
							.contact-info__col
								.contact-info__img
									img(src="./img/phone-ico.png" alt="img")
								.contact-info__txt
									a(href="tel:").contact-info__link +38 (067) 123 45 67:
									a(href="tel:").contact-info__link +38 (067) 123 45 67:
							.contact-info__col
								.contact-info__img
									img(src="./img/mail-ico.png" alt="img")
								.contact-info__txt
									a(href="mailto:").contact-info__link escentr@gmail.com
						a(href="#").droplet-btn.contact-info__btn
							span Вызвать мастера

			.contact-map
				iframe(src='https://www.google.com/maps/embed?pb=!1m10!1m8!1m3!1d10169.967415919087!2d30.54244008897399!3d50.41330703401523!3m2!1i1024!2i768!4f13.1!5e0!3m2!1sru!2sua!4v1588258351156!5m2!1sru!2sua', width='600', height='450', style='border:0;', allowfullscreen='', aria-hidden='false', tabindex='0')
				.block-wrap
					.contact-form
						form
							.contact-form__content
								.site-title.site-title--white.contact-form__title Написать сообщение
								.contact-form__row
									input.custom-input(type="text" name="name" placeholder="Ваше имя")
								.contact-form__row
									input.custom-input.phonemask(type="text" name="phone" placeholder="Ваш телефон")
								.contact-form__row
									textarea.custom-textarea(placeholder="Сообщение")
								a(href="javascript:void(0)").droplet-btn.contact-form__btn
									span Вызвать мастера





